<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:security="http://www.springframework.org/schema/security"
	xsi:schemaLocation="http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="loginFailure" class="com.justdo.security.LoginFailureHandler"></bean>
	<bean id="loginSuccess" class="com.justdo.security.LoginSuccessHandler"></bean>
	<bean id="logoutSuccess" class="com.justdo.security.LogoutHandler"></bean>
	<bean id="bcryptPasswordEncoder" class="org.springframework.security.crypto.bcrypt.BCryptPasswordEncoder"></bean>
	<bean id="customUserDetailsService" class="com.justdo.security.CustomUserDetailsService"></bean>
	
	<security:http>
		<!-- 권한 처리 (순서대로 처리되기 때문에 특수한 경우를 위쪽으로) -->
		<security:intercept-url pattern="/profile" access="hasRole('ROLE_USER')"/>
		<security:intercept-url pattern="/myPassword" access="hasRole('ROLE_USER')"/>
		<security:intercept-url pattern="/myQA" access="hasRole('ROLE_USER')"/>
		<security:intercept-url pattern="/mylist" access="hasRole('ROLE_USER')"/>
		<security:intercept-url pattern="/myMessage" access="hasRole('ROLE_USER')"/>
		<security:intercept-url pattern="/board/register" access="hasRole('ROLE_USER')"/>
		<security:intercept-url pattern="/board/modify" access="hasRole('ROLE_USER')"/>
		<security:intercept-url pattern="/**" access="permitAll"/>
		
		<!-- 메인 페이지 로그인 처리  -->
		<security:form-login 
			login-page="/"
			default-target-url="/board/list"
			authentication-success-handler-ref="loginSuccess"
			authentication-failure-handler-ref="loginFailure"/>
			
		<!-- 서브 페이지 로그인 처리 -->
		<security:form-login 
			login-page="/login/subLogin"
			authentication-success-handler-ref="loginSuccess"
			authentication-failure-handler-ref="loginFailure"/>
			
		<!-- 자동로그인 유지기간 30일 -->
		<security:remember-me data-source-ref="dataSource" token-validity-seconds="2419200"/>
		
		<!-- 로그아웃 처리  -->
		<security:logout 
			success-handler-ref="logoutSuccess" 
			delete-cookies="remember-me, JSESSION_ID" 
			invalidate-session="true"/>
			
		<!-- 403 에러시 보여줄 페이지  -->
		<security:access-denied-handler error-page="/login/access_denied"/>
		
	</security:http>
	
	<security:authentication-manager>
		<security:authentication-provider user-service-ref="customUserDetailsService">
			<security:password-encoder ref="bcryptPasswordEncoder"/>
		</security:authentication-provider>
	</security:authentication-manager>
</beans>